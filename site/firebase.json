{
    "hosting": {
        "public": "views",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "**",
                "destination": "/404.html"
            }
        ]
    }
}